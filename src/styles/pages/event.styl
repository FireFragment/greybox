.page-tournament
	.picking-buttons
		.q-btn
			line-height: 1.2
			width: 80%
			padding: 2rem
			font-size: 1.8rem !important
			height: 100%

			.q-icon
				font-size: 2.5em
				margin-bottom: .5rem

	.q-card
		height: 100%
		dt, dd
			display: inline-block

		dt
			font-weight: bold

		dd
			margin-left: .5rem

	.team-form
		>.q-field--error
			margin-bottom: .5rem

		.q-card
			.q-card__section
				&:not(.header)
					padding-top: 1rem

				&.header
					background-color: rgba(0,0,0,.1)

					.col .q-btn
						margin-right: .5rem

					.q-icon.material-icons
						font-size: 24px

	.checkout-heading
		margin-bottom: .5rem
		margin-top: 1.5rem

.smaller-margin-menu
	.q-item
		.q-item__section--avatar
			min-width: initial

		.q-item__section--main + .q-item__section--avatar
			margin-right: -10px

.billing-modal
	.q-scrollarea
		height: 60vh
		margin-left: -16px
		margin-bottom: -15px
		border: 1px solid rgba(0,0,0,0.12)

.hidable
	transition: height .5s linear
	height: 0
	overflow: hidden

	&.visible
		height: 100%