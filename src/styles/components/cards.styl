.normal-margin-card
	.q-card__section + .q-card__section
		padding-top: 16px

.thin-header-card
	.card-header
			padding: 8px 16px

.q-card__actions.float-actions
	display: block

	&::after
		content: ""
		display: block
		float: none
		clear: both

	.q-btn
		display: block

		&:first-child
			float: left

		&:last-child
			float: right