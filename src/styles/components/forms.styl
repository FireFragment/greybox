// SmartForm
.gwt-SuggestBoxPopup
	border: none !important
	box-shadow: 0 1px 5px rgba(0,0,0,0.2), 0 2px 2px rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12)

	.smartform-instance
		tr
			td
				padding: 8px 16px
				line-height: 32px
				color: black

				&:hover, &.item-selected
					background-color: rgba(0,0,0,.1)

// Checkbox with error
.q-checkbox.q-field--error
	color: $negative

	.q-checkbox__bg
		color: $negative
