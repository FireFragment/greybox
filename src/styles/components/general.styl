.full-page-loader
	position: fixed
	left: 0
	top: 0
	width: 100%
	height: 100%
	background-color: #f5f5f5
	z-index: 2000

	img
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)

// Fade transition
.fade-enter-active
	transition: all .3s ease

.fade-leave-active
	transition: all .8s cubic-bezier(1.0, 0.5, 0.8, 1.0)

.fade-enter, .fade-leave-to
	opacity: 0
