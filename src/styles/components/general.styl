.full-page-loader
	position: fixed
	left: 0
	top: 0
	width: 100%
	height: 100%
	background-color: #f5f5f5
	z-index: 2000

	img
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)

// Fade transition
.fade-enter-active
	transition: all .3s ease

.fade-leave-active
	transition: all .8s cubic-bezier(1.0, 0.5, 0.8, 1.0)

.fade-enter, .fade-leave-to
	opacity: 0

main.q-page a
	color: $primary
	text-decoration: underline

	&:hover
		text-decoration: none

.dialog-medium
	width: 1000px
	max-width: 80vw !important

.simple-confirm-dialog
	.q-card__actions
		justify-content: initial
		-webkit-box-pack: initial
		display: block
		flex: none

		button
			display: block
			margin-bottom: 8px
			float: left

			&:last-child
				float: right

.empty-info
	text-align: center
	display: block
	font-style: italic
	color: #999
	padding: .5rem 1.5rem

.close-paragraphs p
	margin-bottom: 8px

.margin-center
	margin: 0 auto

.hidden-link
	text-decoration: none !important

.page-404
	.q-page
		h1
			font-size: 3rem

		p
			font-size: 1.5rem

		.emoji i
			font-size: 7rem
			margin: 1rem 0

.mode-flag
	font-family: monospace
	font-size: .5em
	background-color: white
	color: black
	border-radius: 3px
	padding: 1px 2px

.hide
	display: none !important